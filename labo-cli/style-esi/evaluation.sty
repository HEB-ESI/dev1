% --------------------------------------------------------------------
%	\infosetd 	affiche un cadre pour que l'étudiants entre ses infos
%				ainsi qu'un cadre pour les points
% --------------------------------------------------------------------

\newcommand{\infosetd}[1]{
	\thispagestyle{empty}
	\vspace*{-3\baselineskip}
	\hskip-2cm
	\begin{minipage}{188mm}
		\begin{colxbox}[width=12cm, drop lifted shadow, nobeforeafter, colback=collight]
			\sffamily
			\medskip
			Nom : {\color{lightgray}{\hrulefill}}
		
			\medskip
			Prénom : {\color{lightgray}{\hrulefill}}
		
			\medskip
			
			Identifiant~: {\color{lightgray}{\hrulefill}}
			\quad
			Groupe : {\color{lightgray}{\hrulefill}}
			%\quad
			%Enseignant : {\color{lightgray}{\hrulefill}}
		\end{colxbox}
		\hfill
		\begin{colxbox}[width=4cm,drop lifted shadow, nobeforeafter, colback=collight]
			\vskip14.5mm
			\hfill {\Large\bfseries/#1}
		\end{colxbox}
	\end{minipage}
	\vskip6mm
}
