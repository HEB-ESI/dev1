% absolute = position absolue et pas relative à l'emplacement courant.
\usepackage[absolute]{textpos}
% Définit l'unité de mesure pour les mesures données dans textblock
\setlength{\TPHorizModule}{1cm}
\setlength{\TPVertModule}{\TPHorizModule}

\newcommand{\licence}[4]{
	\begin{textblock}{15}(1,28.5)
		\begin{minipage}{22mm}
			\includegraphics[width=20mm]{style-esi/licence/#4}
		\end{minipage}
		\begin{minipage}{128mm}
			\tiny{\color{gray}
				Ce document est distribué sous licence #1{} (\url{#2}).
				Les autorisations au-delà du champ de cette licence
				peuvent être demandées à \texttt{#3}.
			}
		\end{minipage}
	\end{textblock}
%	\begin{textblock}{3}(1,28.5)
%		\includegraphics[width=20mm]{style-esi/licence/#4}
%	\end{textblock}
%	\begin{textblock}{12}(3.2,28.3)
%		\tiny{\color{gray}
%			Ce document est distribué sous licence #1{} (\url{#2}).
%			Les autorisations au-delà du champ de cette licence
%			peuvent être demandées à \texttt{#1}.
%		}
%	\end{textblock}
}

\newcommand{\ccbysa}[1] {
	\licence
		{Creative Commons Paternité - Partage à l'Identique 2.0 Belgique}
		{http://creativecommons.org/licenses/by-sa/2.0/be/}
		{#1}
		{cc-by-sa}
}