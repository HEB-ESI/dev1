\usepackage{fancybox}
\usepackage{calc}

% Pour un exemple avec numérotation automatique
\newcounter{exemplenum}
\setcounter{exemplenum}{0}       % Si 0 -> 1er exemple = n°1
\newlength{\widthexemple}

\newenvironment{Exemple}[1]%
{%
	\refstepcounter{exemplenum}	    % Incrémenter le compteur
	\settowidth{\widthtuto}{\scriptsize Exemple \normalsize\theexemplenum}
	\subsubsection*{%
		\hspace{-\widthtuto} 				% Décaler le numéro à gauche
		\hspace{-8mm}
		\large%
		{%
			\color{MidnightBlue}%
			\sffamily%
			\Ovalbox{\scriptsize Exemple \normalsize\theexemplenum}	% Le numéro
		}%
		\hspace{1pt}
		{\sffamily\bfseries#1}	% Le titre
	}
	\nopagebreak}{%
}
