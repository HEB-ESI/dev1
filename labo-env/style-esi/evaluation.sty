% --------------------------------------------------------------------
%	\infosetd 	affiche un cadre pour que l'étudiants entre ses infos
%				ainsi qu'un cadre pour les points
% --------------------------------------------------------------------

% absolute = position absolue et pas relative à l'emplacement courant.
\usepackage[absolute]{textpos}

\newcommand{\infosetd}[1]{
	\begin{textblock*}{0cm}(1cm,1cm)
		\begin{colxbox}[width=12cm, drop lifted shadow, nobeforeafter, colback=colverylight]
			\sffamily
			\medskip
			Nom : {\color{lightgray}{\hrulefill}}
		
			\medskip
			Prénom : {\color{lightgray}{\hrulefill}}
		
			\medskip
			
			Identifiant~: {\color{lightgray}{\hrulefill}}
			\quad
			Groupe : {\color{lightgray}{\hrulefill}}
			%\quad
			%Enseignant : {\color{lightgray}{\hrulefill}}
		\end{colxbox}
	\end{textblock*}
	\begin{textblock*}{4cm}[1,0](\paperwidth-1cm,1cm)
		\begin{colxbox}[width=4cm,drop lifted shadow, nobeforeafter, colback=colverylight]
			\vskip14.5mm
			\hfill {\Large\bfseries/#1}
		\end{colxbox}
	\end{textblock*}
	\vspace*{2cm}
}
